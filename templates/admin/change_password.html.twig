{% extends 'admin.base.html.twig' %}

{% block title %}Hello Admin!
{% endblock %}

{% block body %}
	{% include "admin.sidebar.html.twig" %}
	<!-- Content Wrapper -->
	<div
		id="content-wrapper" class="d-flex flex-column">
		<!-- Main Content -->
		<div id="content">
			{% include "admin.topbar.html.twig" %}
			<div class="container-fluid">
				{% for flash in app.flashes('passwordchange') %}
					<p class="alert alert-sucess">{{flash}}</p>
				{% endfor %}
				<h1>Modification du mot de passe</h1>
				{{form_start(form)}}
				{{form_row(form.password, {
          label: "Votre nouveau mot de passe",
           "attr":{"placeholder":"Saisir un mot de passe sécurisé"}
          })}}
				<button type="submit" class="btn btn-success">Changer</button>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
