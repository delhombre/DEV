{% extends 'base.html.twig' %}

{% block title %}RTFM
{% endblock %}

{% block body %}

	<!-- ======= Intro Section ======= -->
	<section id="intro">
		<div class="intro-container" data-aos="zoom-in" data-aos-delay="100">
			<h1 class="mb-4 pb-0">
				<span>RTFM</span>,<br>
				Votre télé et radio à portée de main</h1>
			<p class="mb-4 pb-0">Reçevez toute l'actualité d'ici et d'ailleurs en un clic.</p>
			{# <a href="https://player.cloud.wowza.com/hosted/p2rjg22k/player.html" class="venobox play-btn mb-2" data-vbtype="video" data-autoplay="true"></a>
									<p>toto</p> #}
			<span class="text-white mb-2">RTFM 88.5 mhz BKO</span>
			<audio controls="controls" src="http://185.41.154.86:8008/;stream.nsv&type=mp3" class="mb-2"></audio>
			<span class="text-white mb-2">Tropic FM 91.7 mhz Kayes</span>
			<audio controls="controls" src="http://185.41.154.86:8022/;stream.nsv&type=mp3"></audio>
		</div>
	</section>
	<!-- End Intro Section -->

	<!-- ======= Facebook Section ======= -->
	<section id="about">
		<div class="container" data-aos="fade-up">
			<div class="row justify-content-center">
				<div class="col-lg-6">
					<h2 style="text-align:center;">NOTRE PAGE FACEBOOK</h2>
					{# <div id="fb-root"></div> #}
					<script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v4.0&appId=764677250356285&autoLogAppEvents=1"></script>
					<div class="fb-page" data-href="https://www.facebook.com/Rtfm-847205138774229/?epa=SEARCH_BOX" data-tabs="timeline" data-height="350" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" style="display:flex;justify-content:center;"></div>
				</div>
				<div class="text-center">
					<a href="https://www.facebook.com/Rtfm-847205138774229/?epa=SEARCH_BOX" class="facebook">
						<i class="fa fa-facebook"></i>
					</a>
				</div>
			</div>
		</div>
	</section>
	<!-- End facebook Section -->

	<main
		id="main">

		<!-- ======= A la Une Section ======= -->
		<section id="speakers">
			<div class="container" data-aos="fade-up">
				<div class="section-header">
					<h2>À la Une</h2>
					<p>Suivez ce qui se passe dans le monde</p>
				</div>

				<div class="row">
					{% for new in news %}
						<div class="col-lg-4 col-md-6">
							<div class="speaker" data-aos="fade-up" data-aos-delay="100">
								<a href="{{path('news_show', {id: new.id})}}">
									<img src="{{ asset('uploads/images/news/' ~ new.image) }}" alt="{{new.title}}" class="img-fluid width100">
								</a>
								<div class="details">
									<h3>
										<a href="{{path('news_show', {id: new.id})}}">{{new.title}}</a>
									</h3>
									<p class="ellipsis">{{new.content}}</p>
								</div>
							</div>
						</div>

					{% endfor %}
				</div>
			</div>

		</section>
		<!-- End A la Une Section -->

		<!-- ======= Politique Section ======= -->
		{% if politiques|length > 0 %}
			<section id="speakers">
				<div class="container" data-aos="fade-up">
					<div class="section-header">
						<h2>Politique</h2>
						<p>Toute l'actualité sur la politique</p>
					</div>

					<div class="row">
						{% for politique in politiques %}
							<div class="col-lg-4 col-md-6">
								<div class="speaker" data-aos="fade-up" data-aos-delay="100">
									<a href="{{path('politique_show', {id: politique.id})}}">
										<img src="{{ asset('uploads/images/politiques/' ~ politique.image) }}" alt="{{politique.title}}" class="img-fluid width100">
									</a>
									<div class="details">
										<h3>
											<a href="{{path('politique_show', {id: politique.id})}}">{{politique.title}}</a>
										</h3>
										<p class="ellipsis">{{politique.content}}</p>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>

			</section>
		{% endif %}
		<!-- End Politique Section -->

		<!-- ======= Venue Section ======= -->
		<section id="venue">

			<div class="container-fluid" data-aos="fade-up">

				<div class="section-header">
					<h2>Faîtes un tour dans nos locaux</h2>
					<p>Venez à l'antenne</p>
				</div>

				<div class="row no-gutters">
					<div class="col-lg-6 venue-map">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15570.37256742617!2d-7.937988373925599!3d12.674660356817833!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xe51d2c5764222c1%3A0x994350415273c171!2sBoulkassoumbougou%2C+Bamako!5e0!3m2!1sen!2sml!4v1566363015656!5m2!1sen!2sml" frameborder="0" style="border:0" allowfullscreen></iframe>
					</div>

					<div class="col-lg-6 venue-info">
						<div class="row justify-content-center">
							<div class="col-11 col-lg-8">
								<h3>RTFM</h3>
								<p>Nous sommes ouverts 7 jours sur 7. Passez prendre l'antenne, nous serons ravis de vous recevoir...</p>
							</div>
						</div>
					</div>
				</div>

			</div>

		</section>
		<!-- End Venue Section -->

		<!-- ======= Economie Section ======= -->
		{% if economies|length > 0 %}
			<section id="hotels" class="section-with-bg">

				<div class="container" data-aos="fade-up">
					<div class="section-header">
						<h2>Economie</h2>
						<p>Ne manquer rien de l'économie</p>
					</div>

					<div class="row" data-aos="fade-up" data-aos-delay="100">
						{% for economie in economies %}
							<div class="col-lg-4 col-md-6">
								<div class="hotel">
									<div class="hotel-img">
										<a href="{{path('economie_show', {id: economie.id})}}">
											<img src="{{ asset('uploads/images/economies/' ~ economie.image) }}" alt="{{economie.title}}" class="img-fluid width100">
										</a>
									</div>
									<h3>
										<a href="{{path('economie_show', {id: economie.id})}}">{{economie.title}}</a>
									</h3>
									<p class="ellipsis">{{economie.content}}</p>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>

			</section>
		{% endif %}
		<!-- End Economie Section -->

		<!-- ======= Sports Section ======= -->
		{% if sports|length > 0 %}
			<section id="speakers">
				<div class="container" data-aos="fade-up">
					<div class="section-header">
						<h2>Sport</h2>
						<p>Football, Basketball, Pétanque...</p>
					</div>

					<div class="row">
						{% for sport in sports %}
							<div class="col-lg-4 col-md-6">
								<div class="speaker" data-aos="fade-up" data-aos-delay="100">
									<a href="{{path('sport_show', {id: sport.id})}}">
										<img src="{{ asset('uploads/images/sports/' ~ sport.image) }}" alt="{{sport.title}}" class="img-fluid width100">
									</a>
									<div class="details">
										<h3>
											<a href="{{path('sport_show', {id: sport.id})}}">{{sport.title}}</a>
										</h3>
										<p class="ellipsis">{{sport.content}}</p>
									</div>
								</div>
							</div>

						{% endfor %}
					</div>
				</div>

			</section>
		{% endif %}
		<!-- End Speakers Section -->

		<!-- ======= Culture Section ======= -->
		{% if cultures|length > 0 %}
			<section id="hotels" class="section-with-bg">

				<div class="container" data-aos="fade-up">
					<div class="section-header">
						<h2>Culture</h2>
						<p>Cultivez vous grâce à nos articles</p>
					</div>

					<div class="row" data-aos="fade-up" data-aos-delay="100">
						{% for culture in cultures %}
							<div class="col-lg-4 col-md-6">
								<div class="hotel">
									<div class="hotel-img">
										<a href="{{path('culture_show', {id: culture.id})}}">
											<img src="{{ asset('uploads/images/cultures/' ~ culture.image) }}" alt="{{culture.title}}" class="img-fluid width100">
										</a>
									</div>
									<h3>
										<a href="{{path('culture_show', {id: culture.id})}}">{{culture.title}}</a>
									</h3>
									<p class="ellipsis">{{culture.content}}</p>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>

			</section>
		{% endif %}
		<!-- End Culture Section -->


		<!-- ======= Contact Section ======= -->
		<section id="contact" class="section-bg">

			<div class="container" data-aos="fade-up">

				<div class="section-header">
					<h2>Contactez-nous</h2>
					<p>Notre équipe à votre écoute</p>
				</div>

				<div class="row contact-info">

					<div class="col-md-4">
						<div class="contact-address">
							<i class="ion-ios-location-outline"></i>
							<h3>Adresse</h3>
							<address>Bamako MALI</address>
						</div>
					</div>

					<div class="col-md-4">
						<div class="contact-phone">
							<i class="ion-ios-telephone-outline"></i>
							<h3>Téléphone</h3>
							<p>
								<a href="tel:+22376433040">20 71 28 28 | 20 71 29 29 | 76 43 30 40</a>
							</p>
						</div>
					</div>

					<div class="col-md-4">
						<div class="contact-email">
							<i class="ion-ios-email-outline"></i>
							<h3>Email</h3>
							<p>
								<a href="mailto:mamadoudiadiesacko@gmail.com">mamadoudiadiesacko@gmail.com</a>
							</p>
						</div>
					</div>

				</div>

				<div class="form">
					<form method="post">
						<div class="form-row">
							<div class="form-group col-md-6">
								<input type="text" name="name" class="form-control" id="name" placeholder="Votre nom"/>
								<div class="validate"></div>
							</div>
							<div class="form-group col-md-6">
								<input type="email" class="form-control" name="email" id="email" placeholder="Votre adresse email"/>
								<div class="validate"></div>
							</div>
						</div>
						<div class="form-group">
							<input type="text" class="form-control" name="subject" id="subject" placeholder="Objet"/>
							<div class="validate"></div>
						</div>
						<div class="form-group">
							<textarea class="form-control" name="message" rows="5" placeholder="Votre message"></textarea>
							<div class="validate"></div>
						</div>
						<div class="text-center">
							<button type="submit">Envoyer</button>
						</div>
					</form>
				</div>

			</div>
		</section>
		<!-- End Contact Section -->

	</main>
	<!-- End #main -->

{% endblock %}
