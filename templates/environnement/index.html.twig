{% extends 'base.html.twig' %}

{% block body %}
	<!-- ======= Intro Section ======= -->
	<section id="intro">
		<div class="intro-container" data-aos="zoom-in" data-aos-delay="100">
			<h1 class="mb-4 pb-0">
				<span>Votre rubrique Environnement</span>
			</h1>
		</div>
	</section>
	<!-- End Intro Section -->
	<div class="container mt-2" data-aos="fade-up">
		<main id="main">
			<div class="row">
				{% for environnement in environnements %}
					<div class="col-lg-4 col-md-6">
						<div class="speaker" data-aos="fade-up" data-aos-delay="100">
							<a href="{{path('environnement_show', {id:environnement.id})}}">
								<img src="{{ asset('uploads/images/environnements/' ~ environnement.image) }}" alt="{{environnement.title}}" class="img-fluid width100">
							</a>
							<div class="details">
								<h3>
									<a href="{{path('environnement_show', {id:environnement.id})}}">{{environnement.title}}</a>
								</h3>
								<p class="ellipsis">{{environnement.content}}</p>
							</div>
						</div>
					</div>
				{% else %}
					<h3 class="text-center">Aucun article enregistré pour le moment</h3>
				{% endfor %}
			</div>
			{% if previous >= 0 %}
				<a href="{{ path('environnement', { offset: previous }) }}">Précedent</a>
			{% endif %}
			{% if next < environnements|length %}
				<a href="{{ path('environnement', { offset: next }) }}">Suivant</a>
			{% endif %}
		</main>
	</div>
{% endblock %}
